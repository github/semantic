                     , tasty-hspec ^>= 1.1.5.1
                     , tasty-hunit ^>= 0.10.0.2
                     , HUnit ^>= 1.6.0.0
                     , leancheck >= 0.8 && <1
                     , temporary ^>= 1.3

test-suite parse-examples
  import:              haskell, dependencies, executable-flags
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Examples.hs
  build-depends:       semantic
                     , Glob
                     , foldl ^>= 1.4.5
                     , resourcet ^>= 1.2
                     , streaming
                     , streaming-bytestring ^>= 0.1.6
                     , tasty
